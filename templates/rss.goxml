{{ $hardware := .Hardware }}
<rss version="2.0">
    <channel>
        <title>{{ $hardware }} Updates</title>
        {{ range .Updates }}
            <item>
            <title>{{ $hardware }} Update: {{ .VersionName }}</title>
            <pubDate>{{ .ReleaseDate }}</pubDate>
            </item>
        {{ end }}
    </channel>
</rss>